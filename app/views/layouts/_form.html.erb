<div class="jumbotron">
  <%= form_tag("/rubaiyats/search", method: "get", class: "form-horizontal") do %>
    <div class="form-group">
      <%= label_tag(:q, "Номер стиха (от 1 до #{rubaiyats_count}):", class: "control-label") %>
      <%= text_field_tag :q, nil, class: "form-control", placeholder: "Введите число" %>
    </div>

    <div class="form-group">
      <%= submit_tag("Вперед!", class: "btn btn-primary btn-lg btn-block") %>
    </div>

    <div class="form-group">
      <%= link_to "Случайный выбор", "/random", class: 'btn btn-success btn-lg btn-block', method: 'post' %>
    </div>
  <% end %>
</div>